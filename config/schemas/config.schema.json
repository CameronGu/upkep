{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "upKep Configuration Schema",
  "description": "Schema for upKep global configuration",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global upKep settings",
      "properties": {
        "log_level": {
          "type": "string",
          "description": "Logging level",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "notifications": {
          "type": "boolean",
          "description": "Enable system notifications",
          "default": true
        },
        "dry_run": {
          "type": "boolean",
          "description": "Show what would be done without executing",
          "default": false
        },
        "parallel_execution": {
          "type": "boolean",
          "description": "Enable parallel module execution",
          "default": true
        },
        "max_parallel_modules": {
          "type": "integer",
          "description": "Maximum number of modules to run in parallel",
          "minimum": 1,
          "maximum": 10,
          "default": 4
        },
        "auto_backup": {
          "type": "boolean",
          "description": "Automatically backup configuration before changes",
          "default": true
        },
        "check_updates": {
          "type": "boolean",
          "description": "Check for upKep updates",
          "default": true
        }
      },
      "required": ["log_level"]
    },
    "defaults": {
      "type": "object",
      "description": "Default settings for modules",
      "properties": {
        "categories": {
          "type": "object",
          "description": "Default intervals by category",
          "properties": {
            "package_managers": {
              "type": "object",
              "description": "Package manager update intervals",
              "properties": {
                "default_interval": {
                  "type": "integer",
                  "description": "Default interval in days for package managers",
                  "minimum": 1,
                  "maximum": 30,
                  "default": 7
                },
                "min_interval": {
                  "type": "integer",
                  "description": "Minimum allowed interval in days",
                  "minimum": 1,
                  "maximum": 7,
                  "default": 1
                },
                "max_interval": {
                  "type": "integer",
                  "description": "Maximum allowed interval in days",
                  "minimum": 7,
                  "maximum": 30,
                  "default": 30
                }
              }
            },
            "system_cleanup": {
              "type": "object",
              "description": "System cleanup intervals",
              "properties": {
                "default_interval": {
                  "type": "integer",
                  "description": "Default interval in days for cleanup operations",
                  "minimum": 1,
                  "maximum": 14,
                  "default": 3
                },
                "min_interval": {
                  "type": "integer",
                  "description": "Minimum allowed interval in days",
                  "minimum": 1,
                  "maximum": 3,
                  "default": 1
                },
                "max_interval": {
                  "type": "integer",
                  "description": "Maximum allowed interval in days",
                  "minimum": 3,
                  "maximum": 14,
                  "default": 14
                }
              }
            },
            "security": {
              "type": "object",
              "description": "Security operation intervals",
              "properties": {
                "default_interval": {
                  "type": "integer",
                  "description": "Default interval in days for security operations",
                  "minimum": 1,
                  "maximum": 7,
                  "default": 3
                },
                "min_interval": {
                  "type": "integer",
                  "description": "Minimum allowed interval in days",
                  "minimum": 1,
                  "maximum": 3,
                  "default": 1
                },
                "max_interval": {
                  "type": "integer",
                  "description": "Maximum allowed interval in days",
                  "minimum": 3,
                  "maximum": 7,
                  "default": 7
                }
              }
            },
            "monitoring": {
              "type": "object",
              "description": "System monitoring intervals",
              "properties": {
                "default_interval": {
                  "type": "integer",
                  "description": "Default interval in days for monitoring operations",
                  "minimum": 1,
                  "maximum": 14,
                  "default": 3
                },
                "min_interval": {
                  "type": "integer",
                  "description": "Minimum allowed interval in days",
                  "minimum": 1,
                  "maximum": 3,
                  "default": 1
                },
                "max_interval": {
                  "type": "integer",
                  "description": "Maximum allowed interval in days",
                  "minimum": 3,
                  "maximum": 14,
                  "default": 14
                }
              }
            }
          }
        },
        "legacy": {
          "type": "object",
          "description": "Legacy interval settings for backward compatibility",
          "properties": {
            "update_interval": {
              "type": "integer",
              "description": "Legacy update interval in days (deprecated, use categories.package_managers.default_interval)",
              "minimum": 1,
              "maximum": 365,
              "default": 7
            },
            "cleanup_interval": {
              "type": "integer",
              "description": "Legacy cleanup interval in days (deprecated, use categories.system_cleanup.default_interval)",
              "minimum": 1,
              "maximum": 365,
              "default": 3
            },
            "security_interval": {
              "type": "integer",
              "description": "Legacy security interval in days (deprecated, use categories.security.default_interval)",
              "minimum": 1,
              "maximum": 365,
              "default": 3
            }
          }
        }
      }
    },
    "logging": {
      "type": "object",
      "description": "Logging configuration",
      "properties": {
        "file": {
          "type": "string",
          "description": "Log file path",
          "default": "~/.upkep/logs/upkep.log"
        },
        "max_size": {
          "type": "string",
          "description": "Maximum log file size",
          "pattern": "^\\d+[KMGT]?B$",
          "default": "10MB"
        },
        "max_files": {
          "type": "integer",
          "description": "Maximum number of log files to keep",
          "minimum": 1,
          "maximum": 100,
          "default": 5
        },
        "format": {
          "type": "string",
          "description": "Log format",
          "enum": ["text", "json"],
          "default": "text"
        },
        "include_timestamp": {
          "type": "boolean",
          "description": "Include timestamp in log entries",
          "default": true
        },
        "include_module": {
          "type": "boolean",
          "description": "Include module name in log entries",
          "default": true
        }
      }
    },
    "modules": {
      "type": "object",
      "description": "Module-specific configuration",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "description": "Configuration for a specific module",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether the module is enabled",
              "default": true
            },
            "interval_days": {
              "type": "integer",
              "description": "Execution interval in days",
              "minimum": 1,
              "maximum": 365
            },
            "description": {
              "type": "string",
              "description": "Module description"
            },
            "timeout": {
              "type": "integer",
              "description": "Module execution timeout in seconds",
              "minimum": 1,
              "maximum": 3600
            },
            "parallel": {
              "type": "boolean",
              "description": "Whether the module can run in parallel"
            },
            "dependencies": {
              "type": "array",
              "description": "Module dependencies",
              "items": {
                "type": "string"
              }
            },
            "options": {
              "type": "object",
              "description": "Module-specific options"
            }
          }
        }
      }
    },
    "notifications": {
      "type": "object",
      "description": "Notification settings",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable notifications",
          "default": true
        },
        "methods": {
          "type": "array",
          "description": "Notification methods",
          "items": {
            "type": "string",
            "enum": ["desktop", "email", "slack", "discord", "webhook"]
          },
          "default": ["desktop"]
        },
        "desktop": {
          "type": "object",
          "description": "Desktop notification settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "sound": {
              "type": "boolean",
              "default": false
            },
            "duration": {
              "type": "integer",
              "description": "Notification duration in seconds",
              "minimum": 1,
              "maximum": 60,
              "default": 5
            }
          }
        },
        "email": {
          "type": "object",
          "description": "Email notification settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "smtp_server": {
              "type": "string"
            },
            "smtp_port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "from_address": {
              "type": "string",
              "format": "email"
            },
            "to_address": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    },
    "security": {
      "type": "object",
      "description": "Security settings",
      "properties": {
        "require_sudo": {
          "type": "boolean",
          "description": "Require sudo for privileged operations",
          "default": true
        },
        "validate_modules": {
          "type": "boolean",
          "description": "Validate modules before execution",
          "default": true
        },
        "sandbox_mode": {
          "type": "boolean",
          "description": "Run modules in sandboxed environment",
          "default": false
        },
        "allowed_paths": {
          "type": "array",
          "description": "Paths modules are allowed to access",
          "items": {
            "type": "string"
          },
          "default": ["/tmp", "~/.upkep"]
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance settings",
      "properties": {
        "cache_enabled": {
          "type": "boolean",
          "description": "Enable caching for module results",
          "default": true
        },
        "cache_ttl": {
          "type": "integer",
          "description": "Cache time-to-live in seconds",
          "minimum": 60,
          "maximum": 86400,
          "default": 3600
        },
        "max_memory": {
          "type": "string",
          "description": "Maximum memory usage per module",
          "pattern": "^\\d+[KMGT]?B$",
          "default": "100MB"
        },
        "profiling": {
          "type": "boolean",
          "description": "Enable performance profiling",
          "default": false
        }
      }
    }
  },
  "additionalProperties": false
} 