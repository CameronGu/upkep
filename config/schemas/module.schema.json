{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "upKep Module Schema",
  "description": "Schema for upKep module metadata",
  "type": "object",
  "required": ["name", "version", "description", "category"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Module name (must match filename without .sh extension)",
      "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$",
      "minLength": 1,
      "maxLength": 50
    },
    "version": {
      "type": "string",
      "description": "Module version in semantic versioning format",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the module does",
      "minLength": 10,
      "maxLength": 200
    },
    "category": {
      "type": "string",
      "description": "Module category for organization",
      "enum": [
        "package_managers",
        "system_cleanup",
        "security",
        "monitoring",
        "system_maintenance"
      ]
    },
    "author": {
      "type": "string",
      "description": "Module author name",
      "maxLength": 100
    },
    "license": {
      "type": "string",
      "description": "Module license",
      "default": "MIT",
      "enum": ["MIT", "GPL-3.0", "Apache-2.0", "BSD-3-Clause", "Unlicense"]
    },
    "dependencies": {
      "type": "object",
      "description": "Module dependencies and requirements",
      "properties": {
        "commands": {
          "type": "array",
          "description": "Required system commands",
          "items": {
            "type": "string"
          }
        },
        "permissions": {
          "type": "array",
          "description": "Required permissions",
          "items": {
            "type": "string",
            "enum": ["sudo", "root", "network", "file_system"]
          }
        }
      }
    },
    "requirements": {
      "type": "object",
      "description": "System requirements",
      "properties": {
        "platforms": {
          "type": "array",
          "description": "Supported platforms",
          "items": {
            "type": "string",
            "enum": ["linux", "macos", "windows"]
          },
          "default": ["linux"]
        },
        "min_upkep_version": {
          "type": "string",
          "description": "Minimum upKep version required",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "configuration": {
      "type": "object",
      "description": "Module configuration options",
      "properties": {
        "interval_days": {
          "type": "integer",
          "description": "Default execution interval in days",
          "minimum": 1,
          "maximum": 365,
          "default": 7
        },
        "interval_override": {
          "type": "object",
          "description": "Module-specific interval override",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to override category default interval",
              "default": false
            },
            "interval_days": {
              "type": "integer",
              "description": "Override interval in days",
              "minimum": 1,
              "maximum": 365
            },
            "reason": {
              "type": "string",
              "description": "Reason for the interval override",
              "maxLength": 200
            }
          }
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether the module is enabled by default",
          "default": true
        },
        "parallel": {
          "type": "boolean",
          "description": "Whether the module can run in parallel",
          "default": false
        },
        "timeout": {
          "type": "integer",
          "description": "Module execution timeout in seconds",
          "minimum": 1,
          "maximum": 3600,
          "default": 300
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for module discovery and filtering",
      "items": {
        "type": "string"
      }
    },
    "examples": {
      "type": "array",
      "description": "Usage examples",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "output": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
} 