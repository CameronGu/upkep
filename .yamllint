extends: default

rules:
  # Line length
  line-length:
    max: 120
    level: warning
  
  # Indentation
  indentation:
    spaces: 2
    indent-sequences: true
  
  # Trailing spaces
  trailing-spaces:
    level: error
  
  # Empty lines
  empty-lines:
    max: 1
    max-end: 1
  
  # Comments
  comments:
    min-spaces-from-content: 1
  
  # Document start
  document-start:
    present: false
  
  # Document end
  document-end:
    present: false
  
  # Key ordering
  key-ordering:
    level: warning
  
  # Truthy values
  truthy:
    check-keys: false
  
  # Hyphens
  hyphens:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Commas
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
  
  # Colons
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  
  # Braces
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  
  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  
  # Quoted strings
  quoted-strings:
    quote-type: single
    required: false
  
  # Anchors
  anchors:
    min-spaces-before: 1
    max-spaces-before: 1
  
  # Aliases
  aliases:
    min-spaces-before: 1
    max-spaces-before: 1 